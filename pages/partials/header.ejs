<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post a Pet</title>
    <style>
        /* google fonts */
        @import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap');

        body {
            margin: 20px 40px;
            font-size: 1.2rem;
            letter-spacing: 1px;
            background: #fafafa;
        }

        h1,
        h3,
        h4,
        ul,
        li,
        a,
        p,
        input,
        label,
        button,
        div,
        footer {
            margin: 0;
            padding: 0;
            font-family: 'Quicksand', sans-serif;
            color: #444;
        }

        h2 {
            margin: 0;
            padding: 0;
            font-family: 'Quicksand', sans-serif;
            color: #444;
            text-align: center;
            font-size: 50px;
        }

        ul {
            list-style-type: none;
        }

        a {
            text-decoration: none;
        }
        a:hover{
            color: #afd6b4;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            margin-bottom: 120px;
        }

        nav ul {
            display: flex;
            align-items: center;
        }

        nav li {
            margin-left: 20px;
        }

        nav li:not(:last-child) {
            border-right: 1px solid #444;
            padding-left: 10px;
            padding-right: 20px;
        }
        

        .btn {
            
            padding: 10px 16px;
            margin-top: 30px;
            border-radius: 36px;
            background: #96fea0;
        }
        .btn:hover {
            color: #bdffc4;
            padding: 10px 16px;
            margin-top: 30px;
            border-radius: 36px;
            background: rgb(80, 131, 90);
        }

        form h2 {
            font-size: 2.4em;
            font-weight: 900;
            margin-bottom: 40px;
        }

        form {
            width: 360px;
            margin: 0 auto;
            padding: 30px;
            box-shadow: 1px 2px 3px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            background: white;
        }

        input {
            padding: 10px 12px;
            border-radius: 4px;
            border: 1px solid #ddd;
            font-size: 1em;
            width: 95%;
        }

        textarea {
            padding: 10px 12px;
            border-radius: 6px;
            border: 1px solid #ddd;
            font-size: 1em;
            width: 95%;
        }

        select {
            padding: 10px 12px;
            border-radius: 4px;
            border: 1px solid #ddd;
            font-size: 1em;
            width: 25%;
        }

        label {
            display: block;
            margin: 20px 0 10px;
        }

        button {
            margin-top: 30px;
            border-radius: 36px;
            background: #96fea0;
            border: 0;
            text-transform: uppercase;
            font-weight: 700;
            font-size: 0.8em;
            display: block;
            padding: 10px 16px;
            letter-spacing: 2px;
        }

        button:hover {
            color: #bdffc4;
            margin-top: 30px;
            border-radius: 36px;
            background: rgb(80, 131, 90);
            border: 0;
            text-transform: uppercase;
            font-weight: 700;
            font-size: 0.8em;
            display: block;
            padding: 10px 16px;
            letter-spacing: 2px;
        }

        .error {
            color: #ff0099;
            margin: 10px 2px;
            font-size: 0.8em;
            font-weight: bold;
        }

        .headings {
            display: flex;
            align-items: center;
        }

        .headings img {
            width: 250px;
            margin-right: 40px;
        }

        .headings h2 {
            font-size: 3em;
            margin-bottom: 10px;
        }

        .headings h3 {
            font-size: 1.6em;
            margin-bottom: 10px;
            margin-left: 2px;
            color: #999;
        }

        .headings .btn {
            margin-top: 20px;
            padding: 12px 18px;
            text-transform: uppercase;
            font-weight: bold;
            display: inline-block;
            font-size: 0.8em;
        }

        .posts {
            display: grid;
            grid-template-columns: 1fr 1fr;
            column-gap: 20px;
            row-gap: 80px;
            margin: 80px auto;
            max-width: 1200px;
        }

        .post {
            display: inline-block;
            box-shadow: rgb(0, 0, 0) 2px;
            border-radius: 20px;
            background: white;
            position: relative;
            text-align: center;
            padding: 0 20px 30px 20px
        }

        .post img {
            width: 250px;
            margin: -30px auto 20px;
        }

        .post #editButton {
            margin-top: 30px;
            border-radius: 36px;
            background: #96ddfe;
            color: #444;
            border: 0;
            text-transform: uppercase;
            font-weight: 700;
            font-size: 0.8em;
            padding: 10px 16px;
            letter-spacing: 2px;
        }

        .post #editButton:hover {
            margin-top: 30px;
            border-radius: 36px;
            background: #6593ad;
            color: #444;
            border: 0;
            text-transform: uppercase;
            font-weight: 700;
            font-size: 0.8em;
            padding: 10px 16px;
            letter-spacing: 2px;
        }

        .post #removeButton {
            margin-top: 30px;
            border-radius: 36px;
            color: #444;
            background: #fe9a96;
            border: 0;
            text-transform: uppercase;
            font-weight: 700;
            font-size: 0.8em;
            padding: 10px 16px;
            letter-spacing: 2px;
        }

        .post #removeButton:hover {
            margin-top: 30px;
            border-radius: 36px;
            background: #8f5755;
            color: #444;
            border: 0;
            text-transform: uppercase;
            font-weight: 700;
            font-size: 0.8em;
            padding: 10px 16px;
            letter-spacing: 2px;
        }

        .comments {
            border-top: 1px black dashed;
            margin-top: 10px;
        }

        .comment-section {
            padding: 10px 12px;
            border-radius: 6px;
            max-height: 300px;
            overflow-y: auto;
            border: 1px solid #444;
            padding: 10px;
        }

        .comments textarea {
            margin-top: 10px;
            padding: 10px 12px;
            border-radius: 6px;
            border: 1px solid #444;
            font-size: 1em;
            width: 95%;
        }

        .comments h3 {
            margin: 10px;
            padding: 0;
            font-family: 'Quicksand', sans-serif;
            color: #444;
        }
    </style>
</head>